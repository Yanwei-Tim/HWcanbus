<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background"
    android:id="@+id/instrument_layout"
    android:keepScreenOn="true">
    
    <!-- 左下角单次里程 -->
    <TextView 
        android:id="@+id/text_oneMileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hud_tab_onemileage"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:visibility="invisible"
        android:gravity="center_vertical"
        android:text="单次里程:158Km"
        android:textSize="@dimen/yibiao_mileage"
        android:paddingTop="@dimen/shake_top"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/icon_oncemileage"
        android:layout_alignParentBottom="true"/>
    <!-- 右下角总里程 -->
    <TextView 
        android:id="@+id/text_totalMileage"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/icon_totalmileage"
        android:drawablePadding="10dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:textSize="@dimen/yibiao_mileage"
        android:background="@drawable/hud_tab_totalmileage"
        android:text="总里程:254670Km"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/shake_top"
        android:paddingRight="18dp"
        android:textColor="@color/white"/>
    <!-- 底部档位 -->
    <LinearLayout 
        android:id="@+id/layout_geap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/text_oneMileage"
        android:layout_toLeftOf="@id/text_totalMileage"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/geap_p"
            android:scaleType="fitCenter"
            android:src="@drawable/geap_p_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/geap_r"
            android:scaleType="fitCenter"
            android:src="@drawable/geap_r_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/geap_n"
            android:scaleType="fitCenter"
            android:src="@drawable/geap_n_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/geap_d"
            android:scaleType="fitCenter"
            android:src="@drawable/geap_d_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/geap_s"
            android:scaleType="fitCenter"
            android:src="@drawable/geap_s_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <!-- 圆仪表 -->
    <ImageView 
        android:id="@+id/img_instrument"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/instrument"
        android:scaleType="fitCenter"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/img_instrument"
        android:layout_alignRight="@id/img_instrument"
        android:layout_alignTop="@id/img_instrument"
        android:layout_alignBottom="@id/img_instrument">
        <LinearLayout 
            android:id="@+id/layout_speed_land"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_centerInParent="true">
	        <ImageView 
	            android:id="@+id/speed_num1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:visibility="invisible"
	            android:src="@drawable/large0"/>
	        <ImageView 
	            android:id="@+id/speed_num2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:visibility="visible"
	            android:src="@drawable/large0"/>
	        <ImageView 
	            android:id="@+id/speed_num3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:visibility="invisible"
	            android:src="@drawable/large0"/>
    	</LinearLayout>
    	<ImageView 
    	    android:layout_marginTop="4dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/large_km"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/layout_speed_land"/>
    </RelativeLayout>
    
    <!-- 时间 -->
    <ImageView 
        android:id="@+id/img_timeLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_time"/>
    <com.hiworld.canbus.view.CustomTextView 
        android:id="@+id/text_time"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/img_timeLogo"
        android:layout_alignRight="@id/img_timeLogo"
        android:layout_alignTop="@id/img_timeLogo"
        android:layout_alignBottom="@id/img_timeLogo"
        android:gravity="center"
        android:textSize="@dimen/time_size"
        android:textColor="@color/white"/>
    
    <!-- 左上角图标 -->
    <LinearLayout 
        android:id="@+id/layout_left_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_timeLogo"
        android:layout_marginRight="@dimen/time_left"
        android:layout_alignBottom="@id/img_timeLogo"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/back_btn"
            android:visibility="invisible"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/light_far"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_farlight1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/light_showWidth"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_shikuan1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/light_double"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_double1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/light_left"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_left1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!-- 右上角图标 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_timeLogo"
        android:layout_alignBottom="@id/img_timeLogo"
        android:layout_marginLeft="@dimen/time_left"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/light_right"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_right1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/icon_oil"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_oil1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/icon_coolwater"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_coolwater1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/icon_battery"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_battery1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/icon_tpms"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_tpms1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!-- 左边小车布局 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_left_icon"
        android:layout_toLeftOf="@id/img_instrument"
        android:layout_above="@id/text_oneMileage">
        <!-- 安全带和手刹图标 -->
        <LinearLayout 
            android:id="@+id/layout_icon_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">
            <ImageView 
	            android:id="@+id/icon_safebelt"
	            android:scaleType="fitCenter"
	            android:src="@drawable/icon_safebelt1"
	            android:visibility="invisible"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <ImageView 
	            android:layout_marginLeft="12dp"
	            android:id="@+id/icon_handBrake"
	            android:layout_marginTop="@dimen/shake_top"
	            android:scaleType="fitCenter"
	            android:src="@drawable/icon_handbrake1"
	            android:visibility="invisible"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
        </LinearLayout>
        <!-- 小车布局 -->
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_icon_car">
            <ImageView 
		        android:id="@+id/hud_car"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/hud_car"
		        android:layout_centerInParent="true"/>
            <ImageView 
		        android:id="@+id/hud_lfdoor"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/hud_car_lfdoor_off"
		        android:layout_centerInParent="true"/>
            <ImageView 
		        android:id="@+id/hud_lrdoor"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/hud_car_lrdoor_off"
		        android:layout_centerInParent="true"/>
            <ImageView 
		        android:id="@+id/hud_rfdoor"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/hud_car_rfdoor_off"
		        android:layout_centerInParent="true"/>
            <ImageView 
		        android:id="@+id/hud_rrdoor"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/hud_car_rrdoor_off"
		        android:layout_centerInParent="true"/>
            <ImageView 
                android:id="@+id/hud_tpms_warn_land"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           
            <ImageView 
		        android:id="@+id/hud_car_farlight"
		        android:visibility="invisible"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/hud_car_farlight"
		        android:layout_centerInParent="true"/>
            <ImageView 
                android:id="@+id/hud_car_bonnet"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_bonnet"/>
            <ImageView 
                android:id="@+id/hud_car_trunk"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_trunk"/>
            <ImageView 
                android:id="@+id/hud_car_nearlight"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_nearlight"/>
            <ImageView 
                android:id="@+id/hud_car_showwidthlight"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_showwidthlight"/>
            <ImageView 
                android:id="@+id/hud_car_stoplight"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_stoplight"/>
            <ImageView 
                android:id="@+id/hud_car_daytimelight"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_daytimelight"/>
            
            <ImageView 
                android:id="@+id/hud_car_lfwin"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_lfwin"/>
            <ImageView 
                android:id="@+id/hud_car_rfwin"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_rfwin"/>
            <ImageView 
                android:id="@+id/hud_car_lrwin"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_lrwin"/>
            <ImageView 
                android:id="@+id/hud_car_rrwin"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_rrwin"/>
            
             <ImageView 
                android:id="@+id/hud_car_left"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_leftlight"/>
            <ImageView 
                android:id="@+id/hud_car_right"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/hud_car_rightlight"/>
        </RelativeLayout>
    </RelativeLayout>
    
    <!-- 右边指南针布局 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_left_icon"
        android:layout_toRightOf="@id/img_instrument"
        android:layout_above="@id/text_oneMileage">
       <ImageView 
            android:id="@+id/compass_logo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/compass_logo"/>
       <ImageView 
            android:id="@+id/compass_zhizhen"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/zhizhen"/>
       
       <ImageView 
            android:id="@+id/limit_logo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/navi_limit_120"/>
       
        <!-- 
        <ImageView 
            android:id="@+id/img_compass"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_needle"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/compass_logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mirror_compass"/> -->
            
        <!-- <com.hiworld.canbus.view.CustomTextView 
            android:id="@+id/text_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/compass_icon"
            android:drawablePadding="12dp"
            android:text="正东"
            android:textSize="32sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/> -->
            <RelativeLayout 
                android:id="@+id/ll_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible">
                <ImageView 
                android:id="@+id/img_weather"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView 
                android:id="@+id/text_weather"
                android:layout_below="@id/img_weather"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text=""/>
            <TextView 
                android:id="@+id/text_temp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/text_weather"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text=""/>
            <TextView 
                android:id="@+id/text_date"
                android:layout_marginTop="6dp"
                android:layout_below="@id/text_temp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text=""/>
            </RelativeLayout>
            
    </RelativeLayout>
</RelativeLayout>
