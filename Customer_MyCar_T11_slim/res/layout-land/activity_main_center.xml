<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/ib_main_carpc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_carpc_selector" />
	
    <ImageButton
        android:id="@+id/ib_main_tpms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ib_main_carpc"
        android:background="@drawable/main_tpms_selector" />
	<View 
	    android:layout_centerHorizontal="true"
	    android:layout_width="1px"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/ib_main_carpc"
	    android:layout_alignBottom="@id/ib_main_carpc"
	    android:background="#D4D0C8"/>
</RelativeLayout>