<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/text_carpcWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_check"
        android:button="@null"
        android:drawableLeft="@drawable/set_carpc"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/selector_jiantou"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/text_pcWarn"
        android:textColor="#FFF"
        android:textSize="@dimen/carpc_size" />

    <RelativeLayout
        android:id="@+id/rl_carpcWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/lay_turnlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bac_set" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="28dp"
                android:text="@string/pc_warn_turn"
                android:textColor="#FFF"
                android:textSize="@dimen/trip_size" />

            <CheckBox
                android:id="@+id/box_turnLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/selector_switch"
                android:button="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_doorWarn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_turnlight"
            android:background="@drawable/bac_set" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="28dp"
                android:text="@string/pc_warn_door"
                android:textColor="#FFF"
                android:textSize="@dimen/trip_size" />

            <CheckBox
                android:id="@+id/box_doorWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/selector_switch"
                android:button="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_oilWarn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_doorWarn"
            android:background="@drawable/bac_set" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="28dp"
                android:text="@string/pc_warn_oil"
                android:textColor="#FFF"
                android:textSize="@dimen/trip_size" />

            <CheckBox
                android:id="@+id/box_oilWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/selector_switch"
                android:button="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_tiredDriving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_oilWarn"
            android:background="@drawable/bac_set" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="28dp"
                android:text="@string/pc_warn_tiredDrive"
                android:textColor="#FFF"
                android:textSize="@dimen/trip_size" />

            <CheckBox
                android:id="@+id/box_tiredDriving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/selector_switch"
                android:button="@null" />
        </RelativeLayout>

        <!-- <CheckBox
            android:id="@+id/box_bonnetTrunk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/box_tiredDriving"
            android:background="@drawable/bac_set"
            android:button="@null"
            android:drawableRight="@drawable/selector_switch"
            android:paddingLeft="28dp"
            android:paddingRight="12dp"
            android:text="前盖尾箱报警"
            android:textColor="#FFF"
            android:textSize="@dimen/trip_size" /> -->

        <RelativeLayout
            android:id="@+id/lay_handBrake_carpc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_tiredDriving"
            android:background="@drawable/bac_set" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="28dp"
                android:text="@string/text_handBrakeWarn"
                android:textColor="#FFF"
                android:textSize="@dimen/trip_size" />

            <CheckBox
                android:id="@+id/box_handBrake_carpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/selector_switch"
                android:button="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_safeBelt_carpc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_handBrake_carpc"
            android:background="@drawable/bac_set" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="28dp"
                android:text="@string/text_safeBeltWarn"
                android:textColor="#FFF"
                android:textSize="@dimen/trip_size" />

            <CheckBox
                android:id="@+id/box_safeBelt_carpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/selector_switch"
                android:button="@null" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>