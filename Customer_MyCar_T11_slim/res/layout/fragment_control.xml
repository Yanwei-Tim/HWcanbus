<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_control_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/background_control" 
            android:src="@drawable/window_control_xml"
            android:contentDescription="@string/window_control"/>

        <ImageButton
            android:id="@+id/btn_control_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_control_window"
            android:layout_toRightOf="@+id/btn_control_window"
            android:layout_marginLeft="4dp"
            android:background="@drawable/background_control" 
            android:src="@drawable/light_control_xml"
            android:contentDescription="@string/light_control"/>
        
        <ImageButton
            android:id="@+id/btn_control_doorlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_control_light"
            android:layout_toRightOf="@+id/btn_control_light"
            android:layout_marginLeft="4dp"
            android:background="@drawable/background_control" 
            android:src="@drawable/doorlock_control_xml"
            android:contentDescription="@string/doorlock_control"/>
        
        <ImageButton
            android:id="@+id/btn_control_suona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_control_doorlock"
            android:layout_toRightOf="@+id/btn_control_doorlock"
            android:layout_marginLeft="4dp"
            android:background="@drawable/background_control" 
            android:src="@drawable/suona_control_xml"
            android:contentDescription="@string/suona_control"/>

        <TextView
            android:id="@+id/tv_control_window"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/btn_control_window"
            android:layout_alignLeft="@+id/btn_control_window"
            android:layout_alignRight="@+id/btn_control_window"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/window_control" />
        
         <TextView
             android:id="@+id/tv_control_light"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:layout_alignLeft="@+id/btn_control_light"
             android:layout_alignRight="@+id/btn_control_light"
             android:layout_alignTop="@+id/btn_control_light"
             android:layout_marginTop="2dp"
             android:gravity="center"
             android:textStyle="bold"
             android:textColor="@android:color/white"
             android:text="@string/light_control"
             android:textSize="20sp" />
         
         <TextView
             android:id="@+id/tv_control_doorlock"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:layout_alignLeft="@+id/btn_control_doorlock"
             android:layout_alignRight="@+id/btn_control_doorlock"
             android:layout_alignTop="@+id/btn_control_doorlock"
             android:layout_marginTop="2dp"
             android:gravity="center"
             android:textStyle="bold"
             android:textColor="@android:color/white"
             android:text="@string/doorlock_control"
             android:textSize="20sp" />
         
         <TextView
             android:id="@+id/tv_control_suona"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:layout_alignLeft="@+id/btn_control_suona"
             android:layout_alignRight="@+id/btn_control_suona"
             android:layout_alignTop="@+id/btn_control_suona"
             android:layout_marginTop="2dp"
             android:gravity="center"
             android:textStyle="bold"
             android:text="@string/suona_control"
             android:textColor="@android:color/white"
             android:textSize="20sp" />

    </RelativeLayout>
    
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>