    <ImageView
        android:id="@+id/b_4008enlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_camera_4008_enlarge" /> 
    
    
    <ImageView
        android:id="@+id/b_4008standard"
        android:layout_width="wrap_content"
