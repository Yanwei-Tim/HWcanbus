    <ImageView
        android:id="@+id/b_4008auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_camera_4008_auto" />

    <ImageView
        android:id="@+id/b_4008180"
