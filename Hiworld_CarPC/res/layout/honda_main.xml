<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honda_bg_carset"
    android:orientation="vertical" >
  
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
        android:id="@+id/iv_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/honda_bg_top_title" />
    
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22px"
        android:src="@drawable/ico_fuel"/>

    <TextView
        android:id="@+id/tv_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="@string/title_fuelmileage" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10px"
        android:src="@drawable/ico_hiworld" />
        
    </RelativeLayout>
    
   <RadioGroup
       android:layout_marginLeft="@dimen/perminute_fuelunit_right"
       android:layout_marginRight="@dimen/perminute_fuelunit_right"
       	android:layout_marginTop="@dimen/trip1_averspeed_textleft"
        android:id="@+id/radio_honda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_lefttab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="@dimen/title_size"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/perminute_Instantaneous"
            android:button="@null"
            android:background="@drawable/selector_lefttab" />

        <RadioButton
            android:id="@+id/btn_righttab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/selector_righttab" />
    </RadioGroup>
    
     <RelativeLayout
        android:id="@+id/fragment_content_honda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout> 

</LinearLayout>
