<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_carcomputer"
    android:orientation="vertical" >
  
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
	        android:id="@+id/iv_head_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/toyota_bg_top_title" />
    
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22px"
        android:src="@drawable/ico_fuel"/>

    <TextView
        android:id="@+id/toyota_tv_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="@string/title_perminutefuel" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10px"
        android:src="@drawable/ico_hiworld" />
        
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/fragment_content_toyota"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout> 

</LinearLayout>
