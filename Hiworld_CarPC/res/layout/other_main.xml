<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@drawable/psa_main_bac"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toptitle_hight" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" 
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>
        
        
        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/toptitle_hight"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ico_hiworld" 
	        android:contentDescription="@string/app_name" />
        
        <View 
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#A40000"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="40sp"
        android:text="当前车型不支持" />

</RelativeLayout>
